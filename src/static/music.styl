html
  font-family -apple-system, BlinkMacSystemFont, "Segoe WPC", "Segoe UI", HelveticaNeue-Light, "Noto Sans", "Microsoft YaHei", "PingFang SC", "Hiragino Sans GB", "Source Han Sans SC", "Source Han Sans CN", "Source Han Sans", "Helvetica Neue", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Noto Emoji", "Segoe UI Emoji", "Segoe UI Symbol"
  font-size 62.5%
  text-size-adjust 100%
  touch-action manipulation

body
  font-size 1.5rem
  line-height 1.6
  position fixed
  display flex
  overflow hidden
  width 100%
  min-width 320px
  height 100%
  margin 0
  user-select none
  color #fff
  align-items center
  -webkit-tap-highlight-color transparent
  -webkit-font-smoothing antialiased

header,
footer,
main
  display block

audio,
progress
  display inline-block
  vertical-align baseline

audio:not([controls])
  display none
  height 0

:before,
:after
  box-sizing border-box

[hidden],
template
  display none

a,
a:before,
a:after
  cursor pointer
  transition all .2s ease-in-out
  text-decoration none
  color inherit
  background-color transparent

a:active,
a:hover,
a:focus
  text-decoration underline
  color alpha(#fff, .5)
  outline 0

p
  display block
  margin 0
  white-space pre-wrap
  word-wrap break-word

img
  max-width 100%
  border 0
  -webkit-touch-callout none

svg:not(:root)
  overflow hidden

ul,
ol
  margin 0
  padding 0

ul
  list-style none

::-webkit-scrollbar
  width 8px
  height 8px
  &-track-piece
    background-color transparent
  &-thumb
    border 0
    border-radius 5px
  &-thumb:vertical:hover,
  &-thumb:horizontal:hover
    background-color alpha(#fff, .3)
  &-thumb:vertical
    background-color alpha(#fff, .2)
  &-thumb:horizontal
    background-color alpha(#fff, .2)

.loading
  position absolute
  z-index 999
  top 0
  right 0
  bottom 0
  left 0
  display flex
  width 100%
  height 100%
  opacity 1
  background alpha(#000, .35)
  align-items center
  justify-content center
  &__over
    z-index 0
    opacity 0

.bgimg
  position absolute
  top -5%
  left -5%
  width 110%
  height 110%
  background-color #888
  background-image url(music.jpg)
  background-repeat no-repeat
  background-position center
  background-size cover
  filter blur(35px)
  .mask
    position absolute
    width 100%
    height 100%
    background alpha(#000, .5)

.music
  position relative
  z-index 2
  display flex
  overflow hidden
  width 100%
  max-width 800px
  margin 0 auto
  @media screen and (max-width: 640px)
    &
      flex-direction column
      max-width 90%
      &-cover
        margin-right 0
      &__radio
        margin 0 auto
      &__trans__left
        opacity 0
        transform translateX(-150%)
      &__trans__none
        opacity 1
        transform translateX(0)
  &-cover
    margin-right 5rem
    flex 1
  &__radio
    font-size 1.4rem
    display flex
    width 50%
    margin 1rem auto 0
    cursor pointer
    transition color .2s ease-in-out, opacity .2s ease-in-out
    text-align center
    opacity 0
    color alpha(#fff, .5)
    justify-content center
    &:hover,
    &:hover i,
    &:hover i:before,
    &:hover i:after,
    &:active,
    &:active i,
    &:active i:before,
    &:active i:after
      color #fff
      border-color #fff
    &__on
      opacity 1
    i
      position relative
      box-sizing border-box
      width 1.8rem
      height 1.5rem
      transition border-color .2s ease-in-out
      border 2px solid alpha(#fff, .5)
      border-bottom 0
      border-radius 1.5rem 1.5rem 0 0
      &::before,
      &::after
        position absolute
        bottom 0
        width 0
        height 0
        content ""
        transition border-color .2s ease-in-out
        border 3px solid alpha(#fff, .5)
        border-radius 50%
      &::before
        left 0
        border-right-width 0
        border-radius 0 2px 2px 0
      &::after
        right 0
        left auto
        border-right-width 0
        border-radius 2px 0 0 2px
    span
      margin-left 1rem
  &__pic
    width 25rem
    height 25rem
    margin 1rem auto 0
    transition transform .3s ease-in-out, opacity .3s ease-in-out
    opacity 1
    img
      box-sizing border-box
      width 100%
      height 100%
      border .8rem solid alpha(#000, .1)
  &__control
    margin 0 .7rem
    .time
      font-size 1.2rem
      margin-top 2rem
      text-align right
      color alpha(#fff, .5)
    .progress
      position relative
      height 4px
      margin-top 1rem
      cursor pointer
      border-radius 3px
      background alpha(#fff, .15)
      span
        position absolute
        display block
        box-sizing border-box
        width 0
        min-width 0
        max-width 100%
        height 100%
        padding-left 8px
        transition width .2s ease-in-out
        border-radius 3px
        background #009688
        i
          position absolute
          top -2px
          right 0
          width 8px
          height 8px
          border-radius 50%
          background #5ecec3
      .loaded
        z-index 1
        background alpha(#fff, .5)
      .played
        z-index 2
    .menu
      display flex
      margin-top 3rem
      align-items center
      @media screen and (max-width: 640px)
        height 5rem
        transform scale(1.3)
  &__btn
    display inline-flex
    align-items center
    flex 1
    .btn
      position relative
      display inline-flex
      box-sizing border-box
      width 3rem
      height 3rem
      margin-right 1rem
      cursor pointer
      transition border .2s ease-in-out
      border 2px solid alpha(#fff, .5)
      border-radius 50%
      @media screen and (max-width: 640px)
        margin-left 3.5rem
      &:hover,
      &:hover i:before,
      &:active,
      &:active i:before
        border-color #fff
      &:hover i,
      &:active i
        border-color transparent #fff
      i
        width 0
        height 0
        margin auto auto auto 1.1rem
        transition border .2s ease-in-out
        border-width .6rem .8rem .6rem 0
        border-style solid
        border-color transparent alpha(#fff, .5)
        &::before
          position absolute
          top 0
          bottom 0
          left .8rem
          width 0
          height 0
          margin auto
          content ""
          transition border .2s ease-in, margin .2s ease-in
          border solid alpha(#fff, .5)
          border-width 1rem 2px 0 0
      .next i
        margin auto 1.1rem auto auto
        border-width .6rem 0 .6rem .8rem
        &:before
          right .7rem
          left auto
      .play,
      .pause
        width 3.6rem
        height 3.6rem
      .play
        border-color #fff
        i
          margin-left 1.2rem
          border-width .6rem 0 .6rem 1rem
          border-color transparent #fff
          &:before
            margin-left .4rem
            opacity 0
            border-color transparent
      .pause
        &:hover i,
        &:active i
          border-color #fff
        i
          margin-left 1.2rem
          border-width 1.2rem 4px 0 0
          border-color alpha(#fff, .5)
          &:before
            margin-left 1rem
            border-width 1.2rem 4px 0 0
  &__menu__more
    display inline-flex
    flex 1
    align-items center
    justify-content flex-end
    @media screen and (max-width: 640px)
      margin-right 3.5rem
    .voice
      display flex
      overflow hidden
      align-items flex-end
      &:hover .volume,
      &:active .volume
        transform translateX(0)
      .mute
        display inline-flex
        overflow hidden
        cursor pointer
        transition background .2s ease-in-out
        &:hover span,
        &:active span
          background #fff
        span
          display inline-flex
          width 5px
          height 1.5rem
          margin-right 2px
          transition background .2s ease-in-out
          transform translateY(40%)
          background alpha(#fff, .5)
          &:nth-child(1)
            transform translateY(0)
          &:nth-child(3)
            transform translateY(10%)
      .mute-on span
        @keyframes aniHeight
          0%
            transform translateY(0)
          50%
            transform translateY(45%)
          100%
            transform translateY(0)
        &:nth-child(1)
          animation aniHeight 1s .25s infinite
        &:nth-child(2)
          animation aniHeight 1s .5s infinite
        &:nth-child(3)
          animation aniHeight 1s .75s infinite
      .mute-off span
        height 2px
      .volume
        display inline-flex
        width 5rem
        height 1.5rem
        margin-right 2px
        cursor pointer
        transition all .5s ease-out
        transform translateX(8rem)
        background alpha(#fff, .5)
        @media screen and (max-width: 640px)
          display none
        span
          display block
          width 45%
          min-width 0
          max-width 100%
          height 100%
          background #009688
    .showlist
      position relative
      box-sizing border-box
      width 1.5rem
      height 1.5rem
      margin-left 1rem
      cursor pointer
      transition border .2s ease-in-out
      border-top 3px solid alpha(#fff, .5)
      &:hover,
      &:hover:before,
      &:hover:after,
      &:hover span,
      &:active,
      &:active:before,
      &:active:after,
      &:active span
        border-color #fff
      &::before,
      &::after
        position absolute
        top 30%
        left 0
        width 60%
        height 0
        content ""
        transition border .2s ease-in-out
        border-top 3px solid alpha(#fff, .5)
      &::after
        top auto
        bottom 0
        width 30%
      span
        transition border .2s ease-in-out
        &:nth-child(1)
          position absolute
          right 0
          bottom 0
          padding 2px
          border 2px solid alpha(#fff, .5)
          border-radius 50%
        &:nth-child(2)
          position absolute
          right 0
          bottom 6px
          height 40%
          border-right 2px solid alpha(#fff, .5)
        &:nth-child(3)
          position absolute
          right -4px
          bottom 60%
          width 25%
          height 0
          transform rotateZ(45deg)
          border-top 2px solid alpha(#fff, .5)
  &-viewport
    position relative
    flex 1
    @media screen and (max-width: 640px)
      position absolute
      top 3rem
      left 0
      width 100%
      height 25rem
      opacity 0
      transition transform .3s ease-in-out, opacity .3s ease-in-out
      transform translateX(150%)
    .view
      position absolute
      width 100%
      height 100%
      opacity 0
      transform translateX(100%)
      transition opacity .3s ease-in-out, transform .3s ease-in-out
      &__active
        transform translateX(0)
        opacity 1
      &__hide
        transform translateX(100%)
        opacity 0
      &__list
        ul
          position absolute
          top 5rem
          bottom 0
          overflow-x hidden
          box-sizing border-box
          width 100%
          margin auto
          -webkit-overflow-scrolling touch
        li
          display flex
          padding 1rem
          cursor pointer
          color alpha(#fff, .5)
          &:hover,
          &:active
            color alpha(#fff, .8)
            background alpha(#000, .2)
          .name,
          .singer
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
          .name
            flex 4
          .singer
            margin 0 1.5rem
            flex 1.5
          .time
            flex .5
        .playing,
        .playing:hover,
        .playing:active
          color #009688
          background alpha(#000, .2)
        small
          color alpha(#fff, .5)
      &__detail
        .info
          display flex
          padding 1rem
          color alpha(#fff, .5)
          @media screen and (max-width 640px)
            text-align center
          span
            display inline-block
            overflow hidden
            max-width 20rem
            margin-right 1rem
            white-space nowrap
            text-overflow ellipsis
            @media screen and (max-width 800px)
              ../,
              &
                display block
                max-width 100%
            i
              font-style normal
              color #fff
        .lyric
          font-size 1.5rem
          line-height 3
          position absolute
          top 10rem
          bottom 0
          left 0
          overflow-x hidden
          box-sizing border-box
          width 100%
          padding 1rem
          -webkit-overflow-scrolling none
          @media screen and (max-width 800px)
            top 11rem
          @media screen and (max-width 640px)
            text-align center
          &__inner
            transform translateY(10rem)
            p
              line-height 1.4
              box-sizing border-box
              padding 1rem 0
              transition color .2s ease-in-out
              text-shadow 0 0 1px alpha(#000, .2)
            .active
              color #01ad9d
            .prev
              color alpha(#fff, .5)
      &__list .title,
      &__detail .title
        font-size 2.2rem
        font-weight 300
        overflow hidden
        box-sizing border-box
        height 4rem
        margin 0 0 1rem
        padding 0 1rem
        white-space nowrap
        text-overflow ellipsis
        border-bottom 1px solid alpha(#000, .1)
        box-shadow 0 1px 0 0 alpha(#fff, .1)
        @media screen and (max-width 640px)
          text-align center
      &__radios
        position absolute
        z-index 2
        top 0
        left 0
        display flex
        overflow-x hidden
        width 100%
        height 100%
        flex-flow row wrap
        -webkit-overflow-scrolling touch
        li
          position relative
          display inline-flex
          box-sizing border-box
          width 50%
          padding 1rem
          cursor pointer
          text-align center
          @media screen and (max-width 640px)
            width 33.333%
          @media screen and (max-width 425px)
            width 50%
          &:hover:before,
          &:active:before
            opacity 1
            border-color #fff
          &:hover:after,
          &:active:after
            opacity 1
            border-color transparent #fff
          &:hover p,
          &:active p
            background-color alpha(#000, .2)
          &::before,
          &::after
            position absolute
            z-index 2
            width 0
            height 0
            content ""
            transition opacity .2s ease-in-out, border-color .2s ease-in-out
            opacity 0
          &::before
            right 2.2rem
            bottom 2.2rem
            padding 1.2rem
            border 2px solid transparent
            border-radius 50%
          &::after
            right 3.1rem
            bottom 3rem
            border-width .5rem 0 .5rem .9rem
            border-style solid
            border-color transparent
          img
            display block
            width 100%
            height 100%
          p
            font-size 2rem
            position absolute
            top 1rem
            right 1rem
            bottom 1rem
            left 1rem
            display flex
            transition background .2s ease-in-out
            color #fff
            background-color alpha(#000, .35)
            text-shadow 1px 1px alpha(#000, .5)
            align-items center
            justify-content center
            flex-wrap wrap
            @media screen and (max-width 640px)
              font-size 1.5rem
        .playing
          &:hover:before,
          &:hover:after,
          &:active:before,
          &:active:after
            display none
          p
            background-color transparent
            &::before,
            &::after
              position absolute
              z-index 2
              right 2rem
              bottom 2rem
              width .5rem
              height 3rem
              content ""
              transform rotateZ(45deg)
              background #fff
            &::before
              right 3.5rem
              height 1.5rem
              transform rotateZ(-45deg)
.footer
  font-size 1.2rem
  position absolute
  right 1rem
  bottom 1rem
  color alpha(#fff, .25)
  @media screen and (max-width 800px)
    left 1rem
    text-align center
  .changelog
    font-size 1.2rem
    position absolute
    z-index 999
    right 1rem
    bottom 3rem
    padding 1rem
    transition transform .2s ease-in-out
    transform translateX(150%)
    color #bbb
    background #585858
    &-on
      transform translateX(0)
    span
        display block
        margin .5rem 0
        color #333
    i
      font-style normal
      margin-left .5rem
      color #888
